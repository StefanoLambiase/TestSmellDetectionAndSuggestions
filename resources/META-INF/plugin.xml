<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>Test Smell: detection and suggestions</name>
  <version>1.0</version>
  <vendor>Stefano Company</vendor>


  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>


  <extensions defaultExtensionNs="com.intellij">
    <checkinHandlerFactory implementation="main.extension.CommitFactory"/>
  </extensions>

  <actions>
    <group id="MyPlugin.SampleMenu" text="TestSmell detection" description="Sample menu">
      <add-to-group group-id="MainMenu" anchor="last"  />
      <action id="Myplugin.TextSmellDetection" class="main.action.TestSmellAction" text="Execute detection" description="A test menu item" />
    </group>
  </actions>

</idea-plugin>